#!/bin/sh

# This script sets environment variables.
# It is intended to keep ~/.zprofile clean
# It is sourced by ~/.zprofile on login


## SET GENERAL VARIABLES ##

export TERMINAL='alacritty'
export EDITOR='nvim'
export BROWSER='firefox'
export EMAIL="YOUR EMAIL"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"


## CONFIGURE PROGRAMS ##

# configure gpg tty
export GPG_TTY="$(tty)"

# less(1) configuration
export LESS='-r'
export LESSOPEN='|lesspipe.sh %s'
export LESSHISTFILE="-"

# Java doesn't understand tiling wm's
export _JAVA_AWT_WM_NONREPARENTING=1

# sudo askpass program
export SUDO_ASKPASS="$HOME/.scripts/dmenupass"

# icons for lf(1)
export LF_ICONS="\
di=ðŸ—€ :\
fi=ðŸ—Ž:\
ln=â›“:\
*.png=ðŸ–¼:\
*.ico=ðŸ–¼:\
*.jpg=ðŸ“¸:\
