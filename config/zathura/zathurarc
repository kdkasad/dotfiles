## Appearance settings:

set font "monospace normal 12"

# Hide statusbar by default
set guioptions ""

# Set background and bar colors
set default-bg "#202020"
set default-fg "#ffffff"

set statusbar-bg "#202020"
set statusbar-fg "#ffffff"

set inputbar-bg "#191919"
set inputbar-fg "#7a9ed7"

# set highlight-color "#ab9df2"
# set highlight-active-color "#7a9ed7"

set completion-bg           "#191919"
set completion-fg           "#ffffff"
set completion-highlight-bg "#ffffff"
set completion-highlight-fg "#191919"

set index-bg           "#191919"
set index-fg           "#ffffff"
set index-active-bg "#ffffff"
set index-active-fg "#191919"

# set statusbar padding
set statusbar-h-padding 24

# change document colors
set recolor true
set recolor-lightcolor "#202020"
set recolor-darkcolor "#ffffff"

set continuous-hist-save

# shorten paths
set window-title-basename
set window-title-home-tilde
set statusbar-home-tilde
set statusbar-basename

# Show search results while typing
set incremental-search

# Set space between pages
set page-padding 10

# Workaround to allow xdg-open to work properly when opening links
# See https://git.pwmt.org/pwmt/zathura/-/issues/151
set sandbox none

## Key mappings:

map u scroll half-up
map d scroll half-down

map r reload
map R rotate

map - zoom out
map = zoom in
map + zoom reset

map i recolor

# vim: ft=conf
