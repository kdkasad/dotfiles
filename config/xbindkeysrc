#vol up
"volup"
    XF86AudioRaiseVolume 
#vol down
"voldown"
    XF86AudioLowerVolume 
# toggle mute
"volmute"
	XF86AudioMute

"$TERMINAL -e ncmpc"
	XF86AudioStop
"mpc toggle"
	XF86AudioPlay
"mpc next"
	XF86AudioNext
"mpc prev"
	XF86AudioPrev

# dunst controls
"dunstctl close"
	Control + space
"dunstctl close-all"
	Control + Shift + space
"dunstctl history-pop"
	Control + grave

# brightness down
"backlightctl dec 10"
	XF86MonBrightnessDown
"backlightctl dec 10"
	Mod4 + F5
# brightness up
"backlightctl inc 10"
	XF86MonBrightnessUp
"backlightctl inc 10"
	Mod4 + F6

# Airplane mode key (toggle WiFi)
"rftoggle"
	XF86RFKill

# open shutdown menu
"shutdownmenu"
	Control + Alt + Delete

# screenshots
"scrnshot"
	Print
"scrnshot -p"
	Shift + Print
"scrnshot -s"
	Control + Print
"scrnshot -ps"
	Control + Shift + Print
"scrnshot -o"
	Mod4 + Print

## app/program shortcuts

# scratchpad
"$TERMINAL --class floating -t scratchpad -e $EDITOR ~/notes/scratchpad.txt"
	Mod4 + v

# man page chooser
"manchooser -g -l 22"
	Mod4 + e

# terminal
"$TERMINAL"
	Mod4 + Shift + Return

# bemenu program launcher
"j4-dmenu-desktop --term=$TERMINAL --dmenu='bemenu -i -l20'"
	Mod4 + p
# bemenu program launcher
"bemenu_run_history -l20"
	Mod4 + Shift + p

# unicode character chooser
"unichooser -l 20"
	Mod4 + semicolon

# emoji chooser
"emojichooser -l 20"
	Mod4 + Shift + semicolon

# drive mount menu
"mountmenu -l 20"
	Mod4 + Shift + F9
# drive unmount menu
"unmountmenu -l 20"
	Mod4 + Shift + F10

# web browser
"$BROWSER"
	Mod4 + b

# lock screen
"slock"
	Mod4 + Shift + l

# config file editor
"confedit"
	Mod4 + o

# email client
"$TERMINAL -e neomutt"
	Mod4 + Shift + M

# toggle trayer
"traytoggle"
	Mod4 + Shift + t

"$BROWSER https://youtu.be/dQw4w9WgXcQ"
	Mod4 + Super_L

# toggle polybar
"polybar-msg cmd toggle"
	Mod4 + space

# galculator
"galculator"
	XF86Calculator

# file manager
"$TERMINAL -t "File Manager" -e lf"
	Mod4 + Control + Return

# fuzzy search for drag-and-drop
"$TERMINAL -e fuzzydrop"
	Mod4 + Control + Shift + Return

# bc(1)
"$TERMINAL -e bc -ilq ${XDG_CONFIG_HOME:-$HOME/.config}/init.bc"
	Mod4 + Shift + b

