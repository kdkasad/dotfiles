#vol up
"volup"
    XF86AudioRaiseVolume 
#vol down
"voldown"
    XF86AudioLowerVolume 
# toggle mute
"volmute"
	XF86AudioMute

"$TERMINAL -e ncmpc"
	XF86AudioStop
"mpc toggle"
	XF86AudioPlay
"mpc next"
	XF86AudioNext
"mpc prev"
	XF86AudioPrev

# brightness down
"backlightctl dec 10"
	XF86MonBrightnessDown
"backlightctl dec 10"
	Mod4 + F5
# brightness up
"backlightctl inc 10"
	XF86MonBrightnessUp
"backlightctl inc 10"
	Mod4 + F6

# refresh statusbar
"updatestatusbar"
	Mod4 + F1

# Airplane mode key (toggle WiFi)
"rftoggle"
	XF86RFKill

# open shutdown menu
"shutdownmenu"
	Control + Alt + Delete

# screenshots
"scrnshot"
	Print
"scrnshot -p"
	Shift + Print
"scrnshot -s"
	Control + Print
"scrnshot -ps"
	Control + Shift + Print

## app/program shortcuts

# scratchpad
"$TERMINAL --class floating -t scratchpad -e $EDITOR ~/notes/scratchpad.txt"
	Mod4 + v

# man page chooser
"manchooser -g"
	Mod4 + e

# terminal
"$TERMINAL"
	Mod4 + Shift + Return

# dmenu program launcher (centered window)
"rofi -show drun"
	Mod4 + p
# dmenu program launcher
"rofi -show run"
	Mod4 + Shift + p

# unicode character chooser
"unichooser -h 32 -bw 3"
	Mod4 + semicolon

# emoji chooser
"emojichooser"
	Mod4 + Shift + semicolon

# drive mount menu
"mountmenu -h 32 -bw 3"
	Mod4 + Shift + F9
# drive unmount menu
"unmountmenu -h 32 -bw 3"
	Mod4 + Shift + F10

# web browser
"$BROWSER"
	Mod4 + b
"browseurl -h 32"
	Mod4 + Shift + b

# lock screen
"slock"
	Mod4 + Shift + l

# config file editor
"confedit -h 32"
	Mod4 + o

# email client
"$TERMINAL -e neomutt"
	Mod4 + Shift + M

# open today's overview
"$TERMINAL -e sh -c "calcurse -Q; pause -q""
	Mod4 + Shift + t

"$BROWSER https://youtu.be/dQw4w9WgXcQ"
	Mod4 + Super_L

# toggle polybar
"polybar-msg cmd toggle"
	Mod4 + space

# galculator
"galculator"
	Mod4 + Shift + G

# file manager
"$TERMINAL -e lf"
	Mod4 + Control + Return

# fuzzy search for drag-and-drop
"$TERMINAL -e fuzzydrop"
	Mod4 + Control + Shift + Return
