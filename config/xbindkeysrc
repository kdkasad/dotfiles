#vol up
"volup"
    XF86AudioRaiseVolume 
"volup"
	Mod4 + F7
#vol down
"voldown"
    XF86AudioLowerVolume 
"voldown"
	Mod4 + F6
# toggle mute
"volmute"
	XF86AudioMute
"volmute"
	Mod4 + F5

"$TERMINAL -e ncmpc"
	Mod4 + XF86AudioPlay
"mpc toggle"
	XF86AudioPlay
"mpc toggle"
	Mod4 + F3
"mpc next"
	XF86AudioNext
"mpc next"
	Mod4 + F4
"mpc prev"
	XF86AudioPrev
"mpc prev"
	Mod4 + F2

# brightness down
"backlightctl dec 10 ; updatestatusbar brightness"
	Mod4 + F9
"backlightctl dec 10 ; updatestatusbar brightness"
	XF86MonBrightnessDown
# brightness up
"backlightctl inc 10 ; updatestatusbar brightness"
	Mod4 + F10
"backlightctl inc 10 ; updatestatusbar brightness"
	XF86MonBrightnessUp
# brightness 0 (screen off)
"xset dpms force off ; updatestatusbar brightness"
	Mod4 + F11
# brightness 100%
"xset dpms force on ; updatestatusbar brightness"
	Mod4 + F12

# refresh statusbar
"updatestatusbar"
	Mod4 + F1

# Minecraft fishing
"xdotool mousedown 3"
	Control + Mod4 + F
"xdotool mouseup 3"
	Control + Alt + Mod4 + F

# Airplane mode key (toggle WiFi)
"rftoggle"
	XF86RFKill

# open shutdown menu
"shutdownmenu"
	Control + Alt + Delete

# screenshots
"scrnshot"
	Print
"scrnshot -p"
	Shift + Print
"scrnshot -s"
	Control + Print
"scrnshot -ps"
	Control + Shift + Print

## app/program shortcuts

# scratchpad
"$TERMINAL --class floating -t scratchpad -e $EDITOR ~/notes/scratchpad.txt"
	Mod4 + v

# todo list
"$TERMINAL --class floating -t 'todo list' -e $EDITOR ~/notes/todo.txt"
	Mod4 + Shift + t

# man page chooser
"manchooser -g -c -h 32 -l 20 -bw 4"
	Mod4 + e
"manchooser -g -h 32 -l 20 -bw 4"
	Mod4 + Shift + e

# terminal
"$TERMINAL"
	Mod4 + Shift + Return

# dmenu program launcher (centered window)
"dmenu_run_history -c -l 10 -h 32 -bw 4"
	Mod4 + p
# dmenu program launcher
"dmenu_run_history -h 32"
	Mod4 + Shift + p

# unicode character chooser
"unichooser"
	Mod4 + semicolon

# emoji chooser
"emojichooser"
	Mod4 + Shift + semicolon

# drive mount menu
"mountmenu"
	Mod4 + Shift + F9
# drive unmount menu
"unmountmenu"
	Mod4 + Shift + F10

# web browser
"$BROWSER"
	Mod4 + b
"browseurl"
	Mod4 + Shift + b

# lock screen
"slock"
	Mod4 + Shift + l

# config file editor
"confedit"
	Mod4 + o

# email client
"$TERMINAL -e neomutt"
	Mod4 + Shift + M

# launch keepass
"pgrep -x keepassxc >/dev/null || keepassxc"
	Mod4 + Control + K
