#vol up
"volup"
    XF86AudioRaiseVolume 
"volup"
	Mod4 + F7
#vol down
"voldown"
    XF86AudioLowerVolume 
"voldown"
	Mod4 + F6
# toggle mute
"volmute"
	XF86AudioMute
"volmute"
	Mod4 + F5

"mpc toggle"
	XF86AudioPlay
"mpc toggle"
	Mod4 + F3
"mpc next"
	XF86AudioNext
"mpc next"
	Mod4 + F4
"mpc prev"
	XF86AudioPrev
"mpc prev"
	Mod4 + F2

# brightness down
"backlightctl dec 10 ; pkill -x dwmblocks -RTMIN+2"
	Mod4 + F9
"backlightctl dec 10 ; pkill -x dwmblocks -RTMIN+2"
	XF86MonBrightnessDown
# brightness up
"backlightctl inc 10 ; pkill -x dwmblocks -RTMIN+2"
	Mod4 + F10
"backlightctl inc 10 ; pkill -x dwmblocks -RTMIN+2"
	XF86MonBrightnessUp
# brightness 0 (screen off)
"xset dpms force off ; pkill -x dwmblocks -RTMIN+2"
	Mod4 + F11
# brightness 100%
"xset dpms force on ; backlightctl set 100  ; pkill -x dwmblocks -RTMIN+2"
	Mod4 + F12

# refresh statusbar
"pkill -RTMIN dwmblocks"
	Mod4 + F1

# Minecraft fishing
"xdotool mousedown 3"
	Control + Mod4 + F
"xdotool mouseup 3"
	Control + Alt + Mod4 + F

# Airplane mode key (toggle WiFi)
"rftoggle"
	XF86RFKill

# hibernate using Su-S-Esc
"systemctl hibernate"
	Control + Alt + Delete

# screenshots
"scrnshot -f"
	Print
"scrnshot -cf"
	Shift + Print
"scrnshot"
	Control + Print
"scrnshot -c"
	Control + Shift + Print

## app/program shortcuts

# vim
"st -e vim"
	Mod4 + v

# todo list
"st -e vim ~/notes/todo"
	Mod4 + Shift + t

# man page chooser
"manchooser"
	Mod4 + e
"manchooser -p"
	Mod4 + Shift + e

# terminal
"st"
	Mod4 + Shift + Return

# dmenu program launcher
"dmenu_run"
	Mod4 + p

# unicode character chooser
"unichooser"
	Mod4 + semicolon

# emoji chooser
"emojichooser"
	Mod4 + Shift + semicolon

# drive mount menu
"mountmenu"
	Mod4 + Shift + F9
# drive unmount menu
"unmountmenu"
	Mod4 + Shift + F10

# web browser
"$BROWSER"
	Mod4 + b
"browseurl"
	Mod4 + Shift + b

# lock screen
"slock"
	Mod4 + Shift + l
"slock systemctl hibernate -i"
	Mod4 + Shift + Alt + l

# config file editor
"confedit"
	Mod4 + o
