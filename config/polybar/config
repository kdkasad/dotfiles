[colors]

background = ${xrdb:polybar.bg:#000}
background-alt = ${xrdb:polybar.bg-alt:#444}

foreground = ${xrdb:polybar.fg:#fff}
foreground-alt = ${xrdb:polybar.fg-alt:#555}

primary = ${xrdb:polybar.primary:#00f}
secondary = ${xrdb:polybar.secondary:#0f0}
alert = ${xrdb:polybar.alert:#f00}

red = ${xrdb:polybar.red:#f00}
green = ${xrdb:polybar.green:#0f0}
yellow = ${xrdb:polybar.yellow:#ff0}
blue = ${xrdb:polybar.blue:#00f}
purple = ${xrdb:polybar.purple:#f0f}
cyan = ${xrdb:polybar.cyan:#0ff}
orange = ${xrdb:polybar.orange:#f80}

[bar/statusbar]
monitor = ${env:MONITOR:}
width = ${xrdb:polybar.width:100%}
height = ${xrdb:polybar.height:27}
offset-x = ${xrdb:polybar.offset-x:0}
offset-y = ${xrdb:polybar.offset-y:0}
radius = ${xrdb:polybar.radius:0.0}
bottom = ${xrdb:polybar.bottom:true}
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = ${xrdb:polybar.line-size:3}
line-color = ${xrdb:polybar.line-color:#f00}

border-size = ${xrdb:polybar.border-size:4}
border-color = ${xrdb:polybar.border-color:#00000000}

padding-left = ${xrdb:polybar.padding-left:0}
padding-right = ${xrdb:polybar.padding-right:2}

module-margin-left = 1
module-margin-right = 2

font-0 = ${xrdb:polybar.font-0:display:size=10:antialias=true;1}
font-1 = ${xrdb:polybar.font-1:Segoe UI Emoji:size=10:antialias=true;1}
font-2 = ${xrdb:polybar.font-2:monospace:size=10:antialias=true;1}

modules-left = dwm separator
modules-center = mpd
modules-right = backlight-acpi alsa pacman email cpu temperature memory battery date

tray-position = right
tray-padding = 4
;tray-background = #0063ff

override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

[module/separator]
type = custom/text
content = |
content-foreground = ${colors.foreground-alt}

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%
format-padding = 2

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/mpd]
