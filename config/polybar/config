[colors]

background = ${xrdb:polybar.bg:#000}
background-alt = ${xrdb:polybar.bg-alt:#444}

foreground = ${xrdb:polybar.fg:#fff}
foreground-alt = ${xrdb:polybar.fg-alt:#555}

primary = ${xrdb:polybar.primary:#00f}
secondary = ${xrdb:polybar.secondary:#0f0}
alert = ${xrdb:polybar.alert:#f00}

red = ${xrdb:polybar.red:#f00}
green = ${xrdb:polybar.green:#0f0}
yellow = ${xrdb:polybar.yellow:#ff0}
blue = ${xrdb:polybar.blue:#00f}
purple = ${xrdb:polybar.purple:#f0f}
cyan = ${xrdb:polybar.cyan:#0ff}
orange = ${xrdb:polybar.orange:#f80}

[bar/statusbar]
monitor = ${env:MONITOR:}
width = 95%
height = 35
offset-x = 2.5%
offset-y = 13
radius = 13
bottom = true
fixed-center = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = ${xrdb:polybar.line-size:3}
line-color = ${xrdb:polybar.line-color:#f00}

border-size = 0
border-color = ${xrdb:polybar.border-color:#00000000}

padding-left = 2
padding-right = 30

module-margin-left = 1
module-margin-right = 2

font-0 = display:size=11:antialias=true
font-1 = Segoe UI Emoji:size=11:antialias=true
font-2 = monospace:size=11:antialias=true
font-3 = Symbols Nerd Font:size=7:antialias=true

modules-left = xwindow
modules-center = dwm
modules-right = backlight-intel alsa pacman email cpu temperature memory battery date

tray-position = right
tray-padding = 4
tray-detached = true
tray-offset-x = -13
tray-background = ${root.background}

override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%
format-padding = 2

[module/mpd]
type = internal/mpd

format-online = <label-song> 🎵 <bar-progress>
format-underline = ${colors.purple}

label-song = %title%
label-song-maxlen = 25
; no idea what this next line does but it came defaulted to this
label-song-ellipsis = true

bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

icon-play = ▶
icon-pause = ⏸
icon-stop = ⏹
icon-prev = ⏮
icon-next = ⏭
icon-seekb = ⏪
icon-seekf = ⏩
icon-random = 🔀
icon-repeat = 🔁
icon-repeatone = 🔂
icon-single = 🔂
icon-consume = ✀

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = ☀

bar-width = 10
bar-indicator = |
bar-indicator-foreground = ${colors.foreground}
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.purple}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-intel]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "🔨"
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.red}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "⚙ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.cyan}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = ${env:WLAN_IFACE:wlp2s0}
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.blue}
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 📶
ramp-signal-1 = 📶
ramp-signal-2 = 📶
ramp-signal-3 = 📶
ramp-signal-4 = 📶
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = ${env:WLAN_IFACE:enp1s0}
interval = 3.0

format-connected-underline = ${colors.green}
format-connected-prefix = "📡 "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date =
date-alt = "📅 %A, %b %d"

time = 🕓 %H:%M
time-alt = 🕓 %H:%M

format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.purple}

label = %date% %time%

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = "🔊 "
label-volume-foreground = ${root.foreground}

label-muted = 🔇
format-muted-foreground = ${colors.foreground-alt}

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.yellow}
bar-volume-foreground-5 = ${colors.yellow}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1

format-charging =  <label-charging>
format-charging-underline = ${colors.green}
label-charging = 🔋 %percentage_raw%%

format-discharging =  <label-discharging>
format-discharging-underline = ${colors.orange}
label-discharging = 🔋 %percentage_raw%%

format-full-prefix = "🔋 "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

[module/temperature]
type = internal/temperature
thermal-zone = 6

format =  <label>
format-warn = <label-warn>
format-underline = ${colors.red}
format-warn-underline = ${self.format-underline}

label = 🌡 %temperature-c%
label-warn = ${self.label}
; label-warn-foreground = ${colors.secondary}

[module/dwm]
type = internal/dwm

format = <label-tags>
socket-path = /tmp/dwm.sock

; Left-click to view tag, right-click to toggle tag view
enable-tags-click = true

; States: focused, unfocused, visible, urgent, empty
; Available tokens:
;   %name%

; focused = Selected tag on focused monitor
label-focused = 
label-focused-foreground = ${colors.primary}
label-focused-padding = 2

; unfocused = Unselected tag on unselected monitor
label-unfocused = 
label-unfocused-padding = ${self.label-focused-padding}

; visible = Unselected tag, but occupied tag on any monitor
label-visible = 
label-visible-foreground = ${colors.foreground}
label-visible-padding = ${self.label-focused-padding}

; urgent = Unselected tag with window that has urgency hint set
label-urgent = 
label-urgent-foreground = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

; empty = Unselected and unoccupied tag
; This can be set to an empty string to hide empty tags
label-empty = 
label-empty-background = ${colors.background}
label-empty-padding = ${self.label-focused-padding}

[module/pacman]
type = custom/script

exec = ~/.local/bin/scripts/statusbar/packages
interval = 300

click-left = BUTTON=1 ~/.local/bin/scripts/statusbar/packages
click-right = BUTTON=3 ~/.local/bin/scripts/statusbar/packages

format-underline = ${colors.orange}

[module/email]
type = custom/script

exec = ~/.local/bin/scripts/statusbar/email
interval = 60

click-left = BUTTON=1 ~/.local/bin/scripts/statusbar/email
click-right = BUTTON=3 ~/.local/bin/scripts/statusbar/email

format-underline = ${colors.green}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

