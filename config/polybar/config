bottom = ${xrdb:polybar.bottom:true}
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = ${xrdb:polybar.line-size:3}
line-color = ${xrdb:polybar.line-color:#f00}

border-size = ${xrdb:polybar.border-size:4}
border-color = ${xrdb:polybar.border-color:#00000000}

padding-left = ${xrdb:polybar.padding-left:0}
padding-right = ${xrdb:polybar.padding-right:2}

module-margin-left = 1
module-margin-right = 2

font-0 = ${xrdb:polybar.font-0:display:size=10:antialias=true;1}
