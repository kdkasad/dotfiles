[colors]

background = ${xrdb:polybar.bg:#000}
background-alt = ${xrdb:polybar.bg-alt:#444}

foreground = ${xrdb:polybar.fg:#fff}
foreground-alt = ${xrdb:polybar.fg-alt:#555}

primary = ${xrdb:polybar.primary:#00f}
secondary = ${xrdb:polybar.secondary:#0f0}
alert = ${xrdb:polybar.alert:#f00}

red = ${xrdb:polybar.red:#f00}
green = ${xrdb:polybar.green:#0f0}
yellow = ${xrdb:polybar.yellow:#ff0}
blue = ${xrdb:polybar.blue:#00f}
purple = ${xrdb:polybar.purple:#f0f}
cyan = ${xrdb:polybar.cyan:#0ff}
orange = ${xrdb:polybar.orange:#f80}

[bar/statusbar]
monitor = ${env:MONITOR:}
width = 95%
height = 35
offset-x = 2.5%
offset-y = 13
radius = 13
bottom = true
fixed-center = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = ${xrdb:polybar.line-size:3}
line-color = ${xrdb:polybar.line-color:#f00}

border-size = 0
border-color = ${xrdb:polybar.border-color:#00000000}

padding-left = 2
padding-right = 30

module-margin-left = 1
module-margin-right = 2

font-0 = display:size=11:antialias=true
font-1 = Segoe UI Emoji:size=11:antialias=true
font-2 = monospace:size=11:antialias=true
font-3 = Symbols Nerd Font:size=7:antialias=true

modules-left = xwindow
modules-center = dwm
modules-right = backlight-intel alsa pacman email cpu temperature memory battery date

tray-position = right
tray-padding = 4
tray-detached = true
tray-offset-x = -13
tray-background = ${root.background}

override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

