#!/bin/sh

case $BUTTON in
	1) setsid -f $TERMINAL -e htop -s PERCENT_CPU ;;
esac

# utilization:
printf 'ðŸ”¨'
cat /proc/stat | head -n1 | (sleep 1; cat - /proc/stat) | head -n2 | awk '{u=($2+$3+$4); t=(u+$5); if (NR==1){u1=u; t1=t;} else printf "%0.2f%%", (u-u1) * 100 / (t-t1)}'
printf ' '
# temperature:
printf 'ðŸŒ¡'
cat /sys/class/thermal/thermal_zone0/temp | xargs -i%s expr %s / 1000 | tr -d '\n'
printf 'Â° C'
