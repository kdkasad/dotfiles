#!/bin/sh

case $BUTTON in
	1) setsid $TERMINAL -e sh -c "networkctl ; pause" ;;
	3) setsid $TERMINAL -e sh -c "networkctl status" ;;
esac

if ! networkctl | grep -m 1 routable >/dev/null; then
	printf 'âœˆ'
	exit
fi

