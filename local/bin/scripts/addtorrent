#!/bin/sh

pgrep -x transmission-da >/dev/null 2>&1 || (transmission-daemon && pgrep -x dunst >/dev/null && (notify-send -a "Transmission Daemon" "Starting transmission-daemon...") ; sleep 3s)
transmission-remote -a "$@" && (pgrep -x dunst >/dev/null && notify-send -a "Transmission Daemon" "Added torrent" "$@ has been added to queue")
