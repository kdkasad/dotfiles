#!/bin/sh

wldir="${WLDIR:-$HOME/videos/wl}"
historyfile="${HISTORY_FILE:-$wldir/.history}"

cd "$wldir"

for arg in "$@"; do
	case "$arg" in
		-*) continue ;;
		*) echo "$arg" >> "$historyfile" ;;
	esac
done

yt-dlp --quiet --progress -i "$@" && {
	:
	#cleanup-videos .
} || {
	printf "\033[1;31merror\033[0m: yt-dlp exited with an error. Not running cleanup-videos script.\n"
	exit 1
}
