#!/bin/sh

for arg in "$@"; do
	if [ "$arg" = "-n" -o "$arg" = "--no-polybar" ]; then
		nopoly=true
	fi
done

xrandr | grep -qs 'HDMI-1 connected' \
	&& {
		#xrandr --output HDMI-1 --auto --right-of eDP-1 --primary
		xrandr --output eDP-1 --off --output HDMI-1 --auto --primary
		if [ -z "$nopoly" ]; then
			pkill polybar
			"$HOME"/.config/polybar/start-polybar.sh
		fi
	} \
	|| xrandr --auto

xinput --map-to-output 'GTCH7503:00 2A94:D64D' eDP-1
