#!/usr/bin/env python

import random

def random_unicast_mac():
    # Generate a random address between 00:00:00:00:00:00 and ff:ff:ff:ff:ff:ff
    r = random.randint(0x00_00_00_00_00_00, 0xff_ff_ff_ff_ff_ff)
    # Set LSB of first octet to 0
    r &= 0xfe_ff_ff_ff_ff_ff
    # Set bit 2 of first octet to 1
    r |= 0x02_00_00_00_00_00

    # Convert to hex string
    s = f'{r:012x}'

    # Convert to colon-separated string
    a = f'{s[:2]}:{s[2:4]}:{s[4:6]}:{s[6:8]}:{s[8:10]}:{s[10:12]}'
    return a

def main():
    print(random_unicast_mac())

if __name__ == '__main__':
    main()
