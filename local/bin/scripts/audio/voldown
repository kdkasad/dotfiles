#!/bin/sh

if command -v wpctl >/dev/null 2>&1; then # WirePlumber/PipeWire
	wpctl set-mute @DEFAULT_AUDIO_SINK@ 0
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
elif command -v pamixer >/dev/null 2>&1; then # PulseAudio
	# Un-mute and decrease volume
	pamixer -u -d 5
else # ALSA
	# Un-mute
	amixer sset Master on
	# Decrease volume
	amixer sset Master 5%-
fi

# Send volume notification
notifyvolume
